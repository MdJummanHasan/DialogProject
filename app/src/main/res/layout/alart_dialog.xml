<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageSliderRent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200mdp"
        app:iss_auto_cycle="true"
        app:iss_period="2000"
        app:iss_delay="0"/>

    <TextView
        android:id="@+id/titleRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/Primary_text_color"
        android:maxLines="3"
        android:text=""
        android:textSize="@dimen/_16font_mdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10mdp"
        android:textColor="@color/secondary_text_color"
        android:fontFamily="@font/roboto"
        android:text=""
        android:textSize="@dimen/_9font_mdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginBottom="@dimen/_10mdp"
        android:background="#61BCB9B9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:fontFamily="@font/roboto"
                android:text="Tk"
                android:textColor="#3F51B5"
                android:textSize="@dimen/_22font_mdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amountRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:text="20000"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="#3F51B5"
                android:textSize="@dimen/_22font_mdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2mdp"
                android:text="/-"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="#3F51B5"
                android:textSize="@dimen/_22font_mdp" />

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2mdp"
                android:text="month"
                android:fontFamily="@font/roboto"
                android:textColor="#3F51B5"
                android:textSize="@dimen/_12font_mdp" />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/saveRentFill"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_13mdp"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_30mdp"
                android:contentDescription="save"
                android:layout_height="@dimen/_30mdp"
                android:src="@drawable/heart_fill" />

            <ImageView
                android:id="@+id/saveRentBlank"
                android:layout_gravity="end"
                android:contentDescription="save"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_13mdp"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:src="@drawable/heart_blank" />




        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginBottom="@dimen/_10mdp"
        android:background="#61BCB9B9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/categoryLayout"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16mdp"
                    android:layout_height="@dimen/_16mdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/signboard" />

                <TextView
                    android:id="@+id/categoryRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/_12mdp"
                    android:fontFamily="@font/roboto"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16mdp"
                    android:layout_height="@dimen/_16mdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/sub_category" />

                <TextView
                    android:id="@+id/subcategoryRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/_12mdp"
                    android:fontFamily="@font/roboto"/>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/categoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16mdp"
                    android:layout_height="@dimen/_16mdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/size_z" />

                <TextView
                    android:id="@+id/squareFitRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/_12mdp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/sqft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_10mdp"
                    android:text="sqft"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/_12mdp"
                    android:fontFamily="@font/roboto"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_16mdp"
                    android:layout_height="@dimen/_16mdp"
                    android:src="@drawable/elevator"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/floorLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10mdp"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="@dimen/_12mdp"
                    android:fontFamily="@font/roboto"/>



            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>